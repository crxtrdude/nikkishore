Script "VN_Stop" (void){
	ACS_NamedTerminate("VN_KeyInput",0);
	ACS_NamedTerminate("VN_DrawInit",0);	
	VN_Clear();
	TakeInventory("NoWeapon",0x7fffffff);
	Q_Pause(player, False);
	OBJ_Disable(false);
}

